<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="显示">

        <EditTextPreference
            app:key="home"
            app:title="首页"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="名称"
            app:entries="@array/sort_type_entries"
            app:entryValues="@array/sort_type_values"
            app:key="sort"
            app:title="排序"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="reverse"
            app:title="逆序" />

        <SwitchPreferenceCompat
            app:key="hide"
            app:title="显示隐藏文件" />

    </PreferenceCategory>

    <PreferenceCategory app:title="其他">

        <SwitchPreferenceCompat
            app:key="attachment"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/attachment_title" />

    </PreferenceCategory>

</PreferenceScreen>
