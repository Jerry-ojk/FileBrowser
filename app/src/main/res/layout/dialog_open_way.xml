<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialogBg"
    android:paddingLeft="12dp"
    android:paddingTop="16dp"
    android:paddingRight="12dp">

    <TextView
        android:id="@+id/tv_txt"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_text"
        android:elevation="2dp"
        android:gravity="center"
        android:text="文本"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/tv_image"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_text"
        android:elevation="2dp"
        android:gravity="center"
        android:text="图片"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/tv_mp3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mp3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_text"
        android:elevation="2dp"
        android:gravity="center"
        android:text="音乐"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/tv_mp4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mp4"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_text"
        android:elevation="2dp"
        android:gravity="center"
        android:text="视频"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_mp3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_zip"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_text"
        android:elevation="2dp"
        android:gravity="center"
        android:text="zip"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_txt"
        app:layout_constraintTop_toBottomOf="@+id/tv_txt" />


</androidx.constraintlayout.widget.ConstraintLayout>