<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <jerry.filebrowser.view.GestureShowView
        android:id="@+id/gestureShowView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@color/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="middle"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="@+id/gestureShowView"
        app:layout_constraintEnd_toStartOf="@+id/bu_del"
        app:layout_constraintStart_toEndOf="@+id/gestureShowView"
        app:layout_constraintTop_toTopOf="@+id/gestureShowView"
        tools:text="打开目录-opp" />


    <ImageView
        android:id="@+id/bu_del"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_delete"
        android:text="删除"
        app:layout_constraintBottom_toBottomOf="@+id/gestureShowView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gestureShowView" />
</androidx.constraintlayout.widget.ConstraintLayout>