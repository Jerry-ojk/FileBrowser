<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialogBg">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="属性"
        android:textColor="@color/text_title"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="名字"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="路径"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_name_content" />

    <TextView
        android:id="@+id/dialog_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="类型"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_path_content" />

    <TextView
        android:id="@+id/dialog_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="大小"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_type" />

    <TextView
        android:id="@+id/dialog_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="权限"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_size" />

    <TextView
        android:id="@+id/dialog_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="所有者"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_mode" />

    <TextView
        android:id="@+id/dialog_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="所有组"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_author" />

    <TextView
        android:id="@+id/dialog_atime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="访问时间"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_group" />

    <TextView
        android:id="@+id/dialog_mtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="修改时间"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_atime" />

    <TextView
        android:id="@+id/dialog_ctime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="状态时间"

        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_mtime" />

    <TextView
        android:id="@+id/dialog_name_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="middle"
        android:maxLines="5"
        android:textIsSelectable="true"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dialog_atime"
        app:layout_constraintTop_toTopOf="@+id/dialog_name"
        tools:text="android" />

    <TextView
        android:id="@+id/dialog_path_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:maxLines="5"
        android:textIsSelectable="true"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_atime"
        app:layout_constraintTop_toTopOf="@+id/tv_path"
        tools:text="sfdadadadd" />


    <TextView
        android:id="@+id/dialog_type_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/dialog_atime"
        app:layout_constraintTop_toTopOf="@+id/dialog_type"
        tools:text="普通文件" />

    <TextView
        android:id="@+id/dialog_size_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/dialog_atime"
        app:layout_constraintTop_toTopOf="@+id/dialog_size"
        tools:text="23913189k" />

    <TextView
        android:id="@+id/dialog_mode_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/dialog_atime"
        app:layout_constraintTop_toTopOf="@+id/dialog_mode"
        tools:text="rw- r-x ---" />

    <Button
        android:id="@+id/dialog_change_mode"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorLight"
        android:elevation="0dp"
        android:text="更改"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/dialog_mode_content"
        app:layout_constraintTop_toTopOf="@+id/dialog_mode" />

    <TextView
        android:id="@+id/dialog_author_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/dialog_atime"
        app:layout_constraintTop_toTopOf="@+id/dialog_author"
        tools:text="user_1" />

    <TextView
        android:id="@+id/dialog_group_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/dialog_atime"
        app:layout_constraintTop_toTopOf="@+id/dialog_group"
        tools:text="root" />

    <TextView
        android:id="@+id/dialog_atime_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/dialog_atime"
        app:layout_constraintTop_toTopOf="@+id/dialog_atime"
        tools:text="2019-12-23 12:45" />

    <TextView
        android:id="@+id/dialog_mtime_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/dialog_atime"
        app:layout_constraintTop_toTopOf="@+id/dialog_mtime"
        tools:text="2019-12-23 12:45" />

    <TextView
        android:id="@+id/dialog_ctime_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/dialog_atime"
        app:layout_constraintTop_toTopOf="@+id/dialog_ctime"
        tools:text="2019-12-23 12:45" />

</androidx.constraintlayout.widget.ConstraintLayout>